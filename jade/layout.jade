doctype html

mixin navlink(name,link)
  li
    a(href=link)&attributes(attributes)= name

html
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible",content="chrome=1")
        meta(name="viewport",content="width=device-width,initial-scale=1")
        link(href="css/superhero_bootstrap.css", rel="stylesheet")
        link(href="css/custom.css", rel="stylesheet")

    block title

    body
        .navbar-default.navbar-fixed-top
          .navbar-header
            button(type="button",class="navbar-toggle",data-toggle="collapse",data-target=".navbar-responsive-collapse")
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a(href="index.html").navbar-brand.mobile-only
                h3.zero-margin Home

          .navbar-collapse.collapse.navbar-responsive-collapse
            .nav.navbar-nav.navbar-left
              a(href="index.html")
                img(src="img/logo.png", style='padding-left:10px')
            ul.nav.navbar-nav.navbar-right
              +navlink("Home","index.html")
              +navlink("Sign Up","joinus.html")
              +navlink("Training Schedule","training.html")
              +navlink("Gallery","gallery.html")
              +navlink("FAQ & Contact Us","contactus.html")

        block content

        script(src="js/jquery-1.11.0.js")
        script(src="js/bootstrap.min.js")